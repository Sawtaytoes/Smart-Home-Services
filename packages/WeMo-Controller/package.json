{
  "name": "wemo-controller",
  "version": "1.0.0",
  "description": "WeMo controller software using WebSockets and Redux-Observable.",
  "license": "MITNFA",
  "scripts": {
    "debug": "nodemon --inspect app.js",
    "lint": "node app.js lint",
    "lint:watch": "nodemon app.js lint",
    "start": "yarn && nodemon app.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "_moduleAliases": {
    "$redux": "./redux",
    "$utils": "./utils"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "concurrency": 5,
    "files": [
      "redux/**/*.test.js",
      "utils/**/*.test.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "@ghadyani-framework/node": "^3.0.1",
    "@ghadyani-framework/redux-utils": "^1.1.3",
    "@ghadyani-framework/websocket": "^3.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-sslify": "^1.2.0",
    "helmet": "^3.16.0",
    "node-fetch": "^2.3.0",
    "wemo-client": "^0.15.0"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "nodemon": "^1.18.10"
  }
}
