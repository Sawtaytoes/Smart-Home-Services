{
  "name": "lifx-controller",
  "version": "0.0.0",
  "description": "LIFX controller software using WebSockets.",
  "license": "MITNFA",
  "scripts": {
    "debug": "nodemon --inspect app.js",
    "lint": "node app.js lint",
    "lint:watch": "nodemon app.js lint",
    "start": "yarn && nodemon app.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "_moduleAliases": {
    "$cache": "./.cache",
    "$redux": "./redux",
    "$utils": "./utils"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "concurrency": 5,
    "files": [
      "redux/**/*.test.js",
      "utils/**/*.test.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "@redux-observable-backend/core": "^4.1.1",
    "@redux-observable-backend/node": "^4.2.4",
    "@redux-observable-backend/redux-utils": "^4.2.4",
    "@redux-observable-backend/websocket": "^4.2.5",
    "better-module-alias": "^1.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "lifx-lan-client": "^1.0.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@ghadyani-eslint/eslint-config-node": "^1.1.3",
    "nodemon": "^1.19.1"
  }
}
