{
  "name": "lifx-controller",
  "version": "0.0.0",
  "description": "LIFX controller software using WebSockets.",
  "license": "MITNFA",
  "scripts": {
    "debug": "nodemon --inspect app.js",
    "lint": "node app.js lint",
    "lint:watch": "nodemon app.js lint",
    "start": "yarn && nodemon app.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "_moduleAliases": {
    "$cache": "./.cache",
    "$redux": "./redux",
    "$utils": "./utils"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "concurrency": 5,
    "files": [
      "redux/**/*.test.js",
      "utils/**/*.test.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "@ghadyani-framework/node": "^3.0.1",
    "@ghadyani-framework/redux-utils": "^1.1.3",
    "@ghadyani-framework/websocket": "^3.0.3",
    "node-fetch": "^2.6.0",
    "node-lifx": "^0.8.0",
    "node-lifx-lan": "^0.3.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
