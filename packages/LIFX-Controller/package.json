{
  "name": "lifx-controller",
  "version": "0.0.0",
  "description": "Utilities for creating applications using WebSockets.",
  "license": "MITNFA",
  "scripts": {
    "debug": "nodemon --inspect app.js",
    "lint": "node app.js lint",
    "lint:watch": "nodemon app.js lint",
    "start": "yarn && nodemon app.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "engines": {
    "node": ">=8.11.4",
    "yarn": ">=1.6.0"
  },
  "_moduleAliases": {
    "$cache": "./.cache",
    "$redux": "./redux",
    "$utils": "./utils"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    },
    "concurrency": 5,
    "files": [
      "redux/**/*.test.js",
      "utils/**/*.test.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "@ghadyani-framework/node": "^2.4.0",
    "@ghadyani-framework/redux-utils": "^0.2.0",
    "@ghadyani-framework/websocket": "^2.2.0",
    "node-fetch": "^2.2.0",
    "node-lifx": "^0.8.0",
    "node-lifx-lan": "^0.2.1"
  }
}
